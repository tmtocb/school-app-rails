<div class="card">
  <div class="card-header">
    <i class="fas fa-graduation-cap"></i> <%= link_to course.title, course_path(course) %>
  </div>
  <div class="card-body">
    <small><%= course.short_description %></small>
  </div>
  <div class="card-footer">
    <div class="text-center">
    <%= number_to_currency(course.price) %>
    </div>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-md-6">
        <i class="fas fa-globe-africa"></i> <%= course.language %>
      </div>
      <div class="col-md-6 text-right">
        <i class="fas fa-signal"></i> <%= course.level %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-md-6">
        <i class="fas fa-clock"></i> <%= course.created_at %><br>
      </div>
      <div class="col-md-6 text-right">
        <i class="fas fa-chalkboard-teacher"></i> <%= course.user %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to 'Show', course, class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning' %>
    <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
  </div>
</div>

