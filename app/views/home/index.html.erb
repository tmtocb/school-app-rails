<div class="jumbotron">
  <div class="display-4">
   What do you want to learn?
  </div>

  <div class="p-4">
    <div class="form-inline my-2 my-lg-0">
      <%= form_tag(courses_path, method: :get) do %>
        <div class="input-group">
          <%= text_field_tag :title, params[:title], autocomplete: 'off', placeholder: "Search", class: 'form-control' %>
            <span class="input-group-append">
              <button class="btn btn-primary btn-sm" type="submit">
                <span aria-hidden="true" class="fa fa-search"></span>
              </button>
            </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="card-group">
  <div class="card card-body">
    <h1><i class="fas fa-clock"></i></h1>
    <div class="row">
      <%= Course.count %> online courses
    </div>
    <div class="row">
      Explore a variety of fresh topics
    </div>
  </div>

  <div class="card card-body">
    <h1><i class="fas fa-graduation-cap"></i></h1>
    <div class="row">
      <%= Course.distinct.count(:user_id) %> expert instructors
    </div>
    <div class="row">
      Find the right instructor for you
    </div>
  </div>

  <div class="card card-body">
    <h1><i class="fas fa-user-graduate"></i></h1>
    <div class="row">
      <%= User.count %> active students
    </div>
    <div class="row">
      Join the knowledge community
    </div>
  </div>

  <div class="card card-body">
    <h1><i class="fas fa-infinity"></i></h1>
    <div class="row">
      Lifetime access
    </div>
    <div class="row">
      Learn on your schedule
    </div>
  </div>

</div>

<hr>
<h2>Popular Courses:</h2>
<div class="card-columns">
  <% @courses.each do |course| %>
    <%= render 'courses/course', course: course %>
  <% end %>
</div>
<hr>
<h2>Top Rated Courses:</h2>
<div class="card-columns">
  <% @courses.each do |course| %>
    <%= render 'courses/course', course: course %>
  <% end %>
</div>
<hr>
<h2>Most Recent Courses:</h2>
<div class="card-columns">
  <% @latest_courses.each do |course| %>
    <%= render 'courses/course', course: course %>
  <% end %>
</div>
<hr>